<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>New article registration</title>
    <%- include('../../_share/stylesheets'); %>
  </head>
  <body>
    <%- include('../../_share/navbar'); %>
    <main role="main" class="container">

      <div class="border-bottom mt-5">
        <h1>New article registration</h1>
      </div>
      <form class="mt-4">

        <div class="form-group row">
          <label for="url" class="col-sm-2 col-form-label">URL</label>
          <div class="col-sm-10">
            <input readonly type="text" name="url" id="url" class="form-control-plaintext" value="<%= original.url %>">
          </div>
        </div>

        <div class="form-group row">
          <label for="title" class="col-sm-2 col-form-label">Title</label>
          <div class="col-sm-10">
            <input readonly type="text" name="title" id="title" class="form-control-plaintext" value="<%= original.title %>">
          </div>
        </div>

        <div class="form-group row">
          <label for="content" class="col-sm-2 col-form-label">Content</label>
          <div class="col-sm-10">
            <textarea readonly type="text" name="content" id="content" class="form-control-plaintext" value="<%= original.content %>" rows="6"></textarea>
          </div>
        </div>

        <div class="form-group row">
          <label for="keywords" class="col-sm-2 col-form-label">Keywords</label>
          <div class="col-sm-10">
            <input readonly type="text" name="keywords" id="keywords" class="form-control-plaintext" value="<%= original.keywords %>">
          </div>
        </div>

        <div class="form-group row">
          <label for="authors" class="col-sm-2 col-form-label">Authors</label>
          <div class="col-sm-10">
            <input readonly type="text" name="authors" id="authors" class="form-control-plaintext" value="<%= original.authors %>">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/posts/regist/execute" value="Register">
            <input type="submit" class="btn btn-secondary" data-method="POST" data-action="/account/posts/regist/input" value="Back">
          </div>
        </div>
      </form>

    </main><!-- /.container -->
    <%- include('../../_share/javascripts'); %>
    <script src="/public/javascripts/account/posts/regist.js"></script>
  </body>
</html>
